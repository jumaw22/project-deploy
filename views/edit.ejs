<!DOCTYPE html>
<html>
<head>
  <title>Edit Employee</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html, body {
      height: 100%;
    }
    .center-wrapper {
      height: 100%;
    }
    .form-container {
      max-width: 500px;
      width: 100%;
    }
  </style>
</head>
<body class="d-flex align-items-center justify-content-center center-wrapper">

  <form action="/update/<%= employee._id %>" method="POST" onsubmit="capitalizeInputs()" class="form-container p-4 border rounded bg-white shadow">
    <h2 class="mb-4 text-center">Edit Employee</h2>

    <div class="mb-3">
      <label>Name</label>
      <input type="text" id="name" name="name" class="form-control" value="<%= employee.name %>" required>
    </div>
    <div class="mb-3">
      <label>Sex</label>
      <select name="sex" class="form-control" required>
        <option value="Male" <%= employee.sex === 'Male' ? 'selected' : '' %>>Male</option>
        <option value="Female" <%= employee.sex === 'Female' ? 'selected' : '' %>>Female</option>
      </select>
    </div>
    <div class="mb-3">
      <label>Status</label>
      <select name="status_of_appointment" class="form-control" required>
        <option value="JO" <%= employee.status_of_appointment === 'JO' ? 'selected' : '' %>>JO</option>
        <option value="COS" <%= employee.status_of_appointment === 'COS' ? 'selected' : '' %>>COS</option>
        <option value="Permanent" <%= employee.status_of_appointment === 'Permanent' ? 'selected' : '' %>>Permanent</option>
        <option value="Retired" <%= employee.status_of_appointment === 'Retired' ? 'selected' : '' %>>Retired</option>
        <option value="Temporary" <%= employee.status_of_appointment === 'Temporary' ? 'selected' : '' %>>Temporary</option>
      </select>
    </div>
    <div class="mb-3">
      <label>Position</label>
      <input type="text" id="position" name="position" class="form-control" value="<%= employee.position %>" required>
    </div>
    <div class="mb-3">
      <label>Education</label>
      <input type="text" id="educational_background" name="educational_background" class="form-control" value="<%= employee.educational_background %>">
    </div>
    <div class="mb-3">
      <label>Email</label>
      <input type="email" name="email" class="form-control" value="<%= employee.email %>">
    </div>
    <div class="mb-3">
      <label>Contact</label>
      <input type="text" name="contact_number" class="form-control" value="<%= employee.contact_number %>">
    </div>

    <div class="d-flex justify-content-between">
      <button type="submit" class="btn btn-success">Save Changes</button>
      <a href="/dashboard" class="btn btn-secondary">Back</a>
    </div>
  </form>

  <script>
    function toTitleCase(str) {
      return str.replace(/\w\S*/g, function(txt) {
        return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();
      });
    }

    function capitalizeInputs() {
      const fields = ['name', 'position', 'educational_background'];
      fields.forEach(id => {
        const input = document.getElementById(id);
        if (input && input.value) input.value = toTitleCase(input.value);
      });
    }
  </script>
</body>
</html>
